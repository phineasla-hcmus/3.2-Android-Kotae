<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp">


    <TextView
        android:id="@+id/tv_question_title_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/open_sans"
        android:paddingLeft="8dp"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/tv_question_content_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/open_sans"
        android:paddingLeft="8dp"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_question_title_admin"
        tools:text="@tools:sample/lorem" />

    <ImageView
        android:id="@+id/iv_report_question_admin"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="?attr/colorSurface"
        app:layout_constraintEnd_toStartOf="@+id/iv_up"
        app:layout_constraintTop_toBottomOf="@+id/tv_question_posttime_admin"
        app:srcCompat="@drawable/ic_outline_report" />

    <TextView
        android:id="@+id/tv_grade_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/open_sans"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:text="Lớp 11"

        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_question_content_admin"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_subject_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/open_sans"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:text="Tiếng Anh"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tv_grade_admin"
        app:layout_constraintTop_toBottomOf="@+id/tv_question_content_admin"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_question_posttime_admin"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginTop="24dp"
        android:padding="5dp"
        android:text="asked a minute ago"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_question_content_admin"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_author_admin"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/open_sans"
        android:paddingLeft="8dp"
        android:text="Author"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_question_posttime_admin"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/iv_down"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:background="?attr/colorSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_question_posttime_admin"
        app:srcCompat="@drawable/ic_baseline_arrow_downward" />

    <ImageView
        android:id="@+id/iv_up"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="?attr/colorSurface"
        app:layout_constraintEnd_toStartOf="@+id/iv_down"
        app:layout_constraintTop_toBottomOf="@+id/tv_question_posttime_admin"
        app:srcCompat="@drawable/ic_baseline_arrow_upward" />

    <TextView
        android:id="@+id/tv_report_admin"
        android:layout_width="32dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="0"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintEnd_toStartOf="@+id/tv_upvote_admin"
        app:layout_constraintTop_toBottomOf="@+id/iv_report_question_admin" />

    <TextView
        android:id="@+id/tv_upvote_admin"
        android:layout_width="32dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="0"
        app:layout_constraintEnd_toStartOf="@+id/tv_downvote_admin"
        app:layout_constraintTop_toBottomOf="@+id/iv_up" />

    <TextView
        android:id="@+id/tv_downvote_admin"
        android:layout_width="32dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_down" />


</androidx.constraintlayout.widget.ConstraintLayout>