<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_between_y_md"
    android:orientation="horizontal"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_post_action_upvote"
        style="@style/Widget.Material3.Button.TextButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/all_upvote"
        android:textColor="@color/color_toggle_button"
        app:icon="@drawable/ic_baseline_arrow_upward"
        app:iconTint="@color/color_toggle_button"
        app:layout_constraintEnd_toStartOf="@+id/btn_post_action_downvote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="10" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_post_action_downvote"
        style="@style/Widget.Material3.Button.TextButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/all_downvote"
        android:textColor="@color/color_toggle_button"
        app:icon="@drawable/ic_baseline_arrow_downward"
        app:iconTint="@color/color_toggle_button"
        app:layout_constraintEnd_toStartOf="@+id/btn_post_action_comment"
        app:layout_constraintStart_toEndOf="@+id/btn_post_action_upvote"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_post_action_comment"
        style="@style/Widget.Material3.Button.TextButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/question_detail_comment"
        android:textColor="@color/color_toggle_button"
        app:icon="@drawable/ic_baseline_comment"
        app:iconTint="@color/color_toggle_button"
        app:layout_constraintEnd_toStartOf="@+id/btn_post_action_more"
        app:layout_constraintStart_toEndOf="@+id/btn_post_action_downvote"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="5" />

