<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_noti_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_between_x_md"
        android:layout_marginTop="@dimen/margin_between_y_sm"
        android:layout_marginEnd="@dimen/margin_between_x_md"
        android:fontFamily="@font/open_sans"
        android:text="Notification Content"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_noti_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_between_y_sm"
        android:fontFamily="@font/open_sans"
        android:text="Time"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintStart_toStartOf="@+id/tv_noti_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_noti_content" />
</androidx.constraintlayout.widget.ConstraintLayout>